<form {{action 'createMessage' on='submit'  }}>
  <div class="form-group">
    <label for="title">Title</label>
    {{input value=title name="title" class="form-control" placeholder="Title"}}
  </div>
  <div class="form-group">
    <label for="message">Message</label>
    {{input value=message name="message" class="form-control" placeholder="The message that should display on the interval"}}
  </div>
  <div class="form-group">
    <label for="interval">Interval (In mins)</label>
    {{input value=interval name="interval" class="form-control" placeholder="15"}}
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
{{outlet}}
