<form {{action 'createCommand'}}>
  <div class="form-group">
    <label for="trigger">Trigger</label>
    <input type="text" class="form-control" name="trigger" value="{{trigger}}" placeholder="!trigger">
  </div>
  <div class="form-group">
    <label for="response">Response</label>
    <input type="text" class="form-control" name="response" value="{{response}}" placeholder="A message that should display when someone types the trigger word">
  </div>
  <div class="form-group">
    <label for="permission">Permission (leave blank for no permission)</label>
    <input type="text" class="form-control" name="permission" value="{{permission}}" placeholder="eg. Mod, Broadcaster, Turbo">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
